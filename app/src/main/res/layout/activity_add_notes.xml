<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNotesActivity">

    <EditText
        android:id="@+id/title_EditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="32dp"
        android:hint="Title"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/description_EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="55dp"
        app:layout_editor_absoluteY="327dp" />

    <EditText
        android:id="@+id/description_EditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="42dp"
        android:hint="Description"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/saveNotesBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_EditText"
        app:layout_editor_absoluteX="55dp"
        app:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/saveNotesBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="180dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_EditText"
        app:layout_editor_absoluteX="55dp"
        app:layout_editor_absoluteY="501dp"
        android:text="Save Note"
        />
    <!--        android:background="@color/colorAccent"-->
    />


</androidx.constraintlayout.widget.ConstraintLayout>